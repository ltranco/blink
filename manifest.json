{
  "manifest_version": 2,

  "name": "Blink",

  "description": "Draw a rectangular selection to download all links within the area.",

  "version": "1.0",

  "browser_action": {
    "default_icon": "icon19-off.png"
  },

  "background": {
    "scripts": ["jquery-1.11.3.min.js", "events.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery-1.11.3.min.js", "content_script.js", "reset.js"]
    }
  ],
  
  "permissions": [
    "activeTab",
    "downloads"
  ]
}